<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_mrp_production_filter_inh_lot" model="ir.ui.view">
            <field name="name">view.mrp.production.filter.inh.lot</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="stock_production_lot_id" />
                </field>
            </field>
        </record>
        <record id="mrp_production_tree_view_inh_lot" model="ir.ui.view">
            <field name="name">mrp.production.tree.view.inh.lot</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <field name="product_uom" position="after">
                    <field name="stock_production_lot_id" />
                </field>
            </field>
        </record>
        <record id="mrp_production_form_view_inh_lot" model="ir.ui.view">
            <field name="name">mrp.production.form.view.inh.lot</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Products to Produce']/.." position="before">
                    <label for="stock_production_lot_id" colspan="2" string="Final lot" />
                    <field name="stock_production_lot_id" colspan="2" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
